# Get type and coordinates for all Wikidata resources having the NWBid property
# use like: $ bash getAllNwbibTypeAndCoordinatesFromWikidata.sparql
# see https://github.com/hbz/lobid-resources/issues/1471
# and https://github.com/hbz/lobid-resources/issues/2204

OUT_FN=./src/main/resources/alma/maps/nwbibWikidataLabelTypeCoords.tsv
OUT_FN_TMP=${OUT_FN}.toBeChecked

MAIL_TO=$(cat web/scripts/.secrets/MAIL_TO)
MAIL_FROM=$(cat web/scripts/.secrets/MAIL_FROM)

curl --header "Accept: text/tab-separated-values" -G 'https://query.wikidata.org/sparql' --data-urlencode query='
SELECT DISTINCT
(CONCAT("https://nwbib.de/spatial#",?nwbibIdLabel) AS ?nwbibId)
?item
?itemLabel
(GROUP_CONCAT(DISTINCT ?type;separator=", ") AS ?types)
?coordinates
WHERE {
 {
 ?item wdt:P6814 ?nwbibIdLabel .
 ?item p:P31 [ ps:P31 ?type ] .
    OPTIONAL { ?item wdt:P625 ?coordinates . }
 }
 SERVICE wikibase:label {  bd:serviceParam wikibase:language "de" }
}
GROUP BY ?nwbibIdLabel ?item ?itemLabel ?coordinates
'  |sed 's#^"##g'|sed 's#"\t<#\t#g'|sed 's#>\t"#\t#g' |sed 's#"@..#\t#g'  |sed 's#\t"#\t#g' |sed 's#"\t#\t#g' |sed 's#"\^\^.*##g' |sed 's#\t\t#\t#g' > $OUT_FN_TMP
grep "https://nwbib.de/spatial#Q365" $OUT_FN_TMP
if [ ! $(echo $?) -eq 0 -o "$(wc -l < $OUT_FN_TMP)" -lt 4000 ]; then
    mail -s "Probleme beim Holen von nwbibWikidataLabelTypeCoords.tsv" "${MAIL_TO}" -a "From: ${MAIL_FROM}" << EOF
Getriggert von crontab, ausgefÃ¼hrt durch
src/main/resources/getAllNwbibTypeAndCoordinatesFromWikidata.sparql.
EOF
  else
  mv  $OUT_FN_TMP $OUT_FN
fi
