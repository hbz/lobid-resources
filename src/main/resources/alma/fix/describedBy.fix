unless any_match("describedBy.dateCreated","\\d{8}|\\d{4}")
	remove_field("describedBy.dateCreated")
end
unless any_match("describedBy.dateModified","\\d{8}|\\d{4}")
	remove_field("describedBy.dateModified")
end

