do list(path:"doi[]", "var":"$i")
  copy_field("$i", "similar[].$append.id")
  replace_all("similar[].$last.id", "^(.*)$","http://dx.doi.org/$1")
end

do list(path:"urn[]", "var":"$i")
  copy_field("$i", "similar[].$append.id")
  replace_all("similar[].$last.id", "^(.*)$","http://nbn-resolving.de/$1")
end

