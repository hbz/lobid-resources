{
    "$id": "manufacture.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Manufacture statements",
    "type": "array",
    "items": {
        "type": "object",
        "additionalProperties":false,
        "properties": {
            "type": {
                "type": "array",
                "items": {
                    "type": "string",
                    "const": "Event"
                }
            },
            "location": {
                "title": "Place of publication",
                "type": "array",
                "items": {
                    "type": "string"
                }
            },
            "manufacturedBy": {
                "title": "Agent of publication",
                "type": "array",
                "items": {
                    "type": "string"
                }
            },
            "dateStatement": {
                "title": "Manufacture date as catalogued",
                "type": "string"
            },
            "startDate": {
                "title": "(Start) date of the manufacture",
                "type": "string"
            },
            "endDate": {
                "title": "End date of the manufacture",
                "type": "string"
            }
        },
        "required": [
            "type"
        ]
    }
}
