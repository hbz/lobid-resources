  "title": "ISMN",
  "description": "The ISMN (International Standard Music Number) of the resource",
  "type": "array",
  "items": {
    "type": "string",
    "pattern": "(979((0\\d{8})|(-0-\\d{4}-\\d{4}-)|(\\s0\\s\\d{4}\\s\\d{4}\\s))\\d)|(M(\\d{9}|(-\\d{4}-\\d{4}-\\d)|(-\\d{3}-\\d{5}-\\d)|(\\s\\d{4}\\s\\d{4}\\s\\d)))"
  }
}
