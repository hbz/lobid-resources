{
  "$id": "language.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Language",
  "description": "Language of the resource",
  "type": "array",
  "items": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "id": {
        "title": "Language URL",
        "type": "string",
        "format": "uri",
        "pattern": "^http:\/\/id.loc.gov\/vocabulary\/iso639-2\/[a-z]{3}"
      },
      "label": {
        "description": "The human-readable German name of the language",
        "type": "string"
      }
    },
    "required": [
      "id",
      "label"
    ]
  }
}
