{
    "$id": "inCollection.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Contained in",
    "description": "The resource an article is contained in",
    "type": "array",
    "items": {
        "type": "object",
        "additionalProperties":false,
        "properties": {
            "id": {
                "type": "string",
                "format": "uri"
            },
            "type": {
                "type": "array",
                "items": {
                    "const": "Collection"
                }
            },
            "label": {
                "type": "string"
            }
        }
    }
}
