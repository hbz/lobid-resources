{
  "$id": "inCollection.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Is in collection",
  "description": "The resource or item is part of a specific collection.",
  "type": "array",
  "items": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "id": {
        "type": "string",
        "format": "uri"
      },
      "type": {
        "type": "array",
        "items": {
          "const": "Collection"
        }
      },
      "label": {
        "type": "string"
      }
    },
    "required": [
      "id",
      "label"
    ]
  }
}
