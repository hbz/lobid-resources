{
  "$id": "related.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Related resource",
  "type": "array",
  "items": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "id": {
        "type": "string",
        "format": "uri"
      },
      "label": {
        "type": "string"
      },
      "note": {
        "$ref": "note.json"
      },
      "isbn": {
        "$ref": "isbn.json"
      },
      "issn": {
        "$ref": "issn.json"
      }
    },
    "dependentRequired": {
      "id": [
        "label"
      ]
    }
  }
}
