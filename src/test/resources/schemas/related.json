{
  "$id": "related.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Related resource",
  "type": "array",
  "items": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "id": {
        "type": "string",
        "format": "uri"
      },
      "label": {
        "type": "string"
      },
      "note": {
        "title": "Note",
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "isbn": {
        "$ref": "isbn.json"
      },
      "issn": {
        "$ref": "issn.json"
      }
    }
  }
}
