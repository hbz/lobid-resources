{
  "$id": "medium.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Medium",
  "description": "Medium of the resource",
  "type": "array",
  "items": {
    "type": "object",
    "additionalProperties": false,
