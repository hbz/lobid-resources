{
    "$id": "publication.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Publication statements",
    "type": "array",
    "items": {
        "type": "object",
        "additionalProperties":false,
        "properties": {
            "type": {
                "type": "array",
                "items": {
                    "type": "string",
                    "enum": [
                        "PublicationEvent",
                        "SecondaryPublicationEvent"
                    ]
                }
            },
            "location": {
                "title": "Place of publication",
                "type": "array",
                "items": {
                    "type": "string"
                }
            },
            "publishedBy": {
                "title": "Agent of publication",
                "type": "array",
                "items": {
                    "type": "string"
                }
            },
            "startDate": {
                "title": "(Start) date of the publication",
                "type": "string"
            },
            "endDate": {
                "title": "End date of the publication",
                "type": "string"
            },
            "frequency": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                    "id": {
                        "type": "string",
                        "format": "uri",
                        "pattern": "http://marc21rdf.info/terms/continuingfre#.*"
                    },
                    "label": {
                        "type": "string",
                        "enum": [
                            "täglich",
                            "dreimal wöchentlich",
                            "zweimal wöchentlich",
                            "wöchentlich",
                            "vierzehntägig",
                            "halbmonatlich",
                            "monatlich",
                            "alle zwei Monate",
                            "vierteljährlich",
                            "halbjährlich",
                            "jährlich",
                            "alle zwei Jahre",
                            "alle drei Jahre",
                            "unregelmäßig oder sonstige Erscheinungsfrequenz"
                        ]
                    }
                }
            },
            "note": {
              "title": "Note",
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "publicationHistory": {
                "type": "string"
            },
            "description": {
                "type": "array",
                "items": {
                    "type": "string"
                }
            }
        },
        "required": [
            "type"
        ]
    }
}
