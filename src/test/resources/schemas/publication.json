{
    "$id": "publication.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Publication statements",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "type": {
                "type": "array",
                "items": {
                    "type": "string",
                    "enum": [
                        "PublicationEvent",
                        "SecondaryPublicationEvent"
                    ]
                }
            },
            "location": {
                "title": "Place of publication",
                "type": "array",
                "items": {
                    "type": "string"
                }
            },
            "publishedBy": {
                "title": "Agent of publication",
                "type": "array",
                "items": {
                    "type": "string"
                }
            },
            "startDate": {
                "title": "(Start) date of the publication",
                "type": "string"
            },
            "endDate": {
                "title": "End date of the publication",
                "type": "string"
            }
        },
        "required": [
            "type"
        ]
    }
}
