{
  "$id": "contribution.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Contribution",
  "description": "The contributions to the creation of the resource",
  "type": "array",
  "items": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "type": {
        "title": "Type",
        "type": "array",
        "items": {
          "const": "Contribution"
        }
      },
      "agent": {
        "title": "Agent",
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "id": {
            "title": "Agent URI",
            "type": "string",
            "format": "uri"
          },
          "type": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": [
                "ConferenceOrEvent",
                "CorporateBody",
                "Person",
                "PlaceOrGeographicName"
              ]
            }
          },
          "label": {
            "title": "Preferred name of the agent",
            "type": "string"
          },
          "altLabel": {
            "title": "Alternative name of the agent",
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "dateOfBirth": {
            "title": "Date of birth of the agent",
            "type": "string"
          },
          "dateOfDeath": {
            "title": "Date of death of the agent",
            "type": "string"
          },
          "dateOfBirthAndDeath": {
            "type": "string"
          },
          "gndIdentifier": {
            "title": "GND ID",
            "type": "string",
            "pattern": "1[012]?\\d{7}[0-9X]|[47]\\d{6}-\\d|[1-9]\\d{0,7}-[0-9X]|3\\d{7}[0-9X]"
          },
          "sameAs": {
            "title": "Other person related pages",
            "type": "array",
            "items": {
              "type": "string",
              "format": "uri"
            }
          }
        },
        "required": [
          "label"
        ]
      },
      "role": {
        "title": "Role",
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "id": {
            "title": "Role URI",
            "type": "string",
            "format": "uri"
          },
          "label": {
            "title": "German name of the role",
            "type": "string"
          }
        },
        "required": [
          "id",
          "label"
        ]
      }
    },
    "required": [
      "agent",
      "role"
    ]
  }
}
