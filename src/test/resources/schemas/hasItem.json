{
    "$id": "hasItem.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Item and holding information",
    "description": "Descriptions of the items and the holding library",
    "type": "array",
    "items": {
        "type": "object",
        "additionalProperties":false,
        "properties": {
            "id": {
                "title": "Item URI",
                "type": "string",
                "format": "uri"
            },
            "type": {
                "title": "Type",
                "type": "array",
                "contains": {
                    "const": "Item"
                }
            },
            "label": {
                "type": "string"
            },
            "currentLibrary": {
                "type": "string"
            },
            "currentLocation": {
                "type": "string"
            },
            "heldBy": {
                "title": "Held by",
                "type": "object",
                "additionalProperties":false,
                "properties": {
                    "id": {
                        "title": "URI of the holding organisation",
                        "type": "string",
                        "format": "uri"
                    },
                    "label": {
                        "type": "string"
                    },
                    "isil": {
                      "type": "string",
                      "pattern": "[A-Z]{2}-.*"
                    }
                }
            },
            "inCollection": {
                "type": "array",
                "items":{
                  "type": "object",
                  "additionalProperties":false,
                  "properties": {
                      "id": {
                          "title": "lobid-organisations URI",
                          "type": "string",
                          "format": "uri"
                      },
                      "label": {
                          "title": "label",
                          "type": "string"
                      }
                  },
                  "required": [
                      "id",
                      "label"
                  ]
                }
            },
            "seeAlso": {
                "title": "Type",
                "type": "array",
                "items": {
                  "type":"string",
                  "format":"url"

                }
            },
            "note": {
                "type": "string"
            },
            "callNumber": {
                "title": "Call number",
                "type": "string"
            },
            "inventoryNumber": {
                "title": "Inventory number",
                "type": "string"
            },
            "serialNumber": {
                "title": "Serial number",
                "type": "string"
            },
            "electronicLocator": {
                "title": "Direct Link",
                "type": "string"
            },
            "sublocation": {
                "title": "Access URL",
                "type": "string"
            }
        }
    }
}
